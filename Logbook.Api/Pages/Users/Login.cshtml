@page "/Login"
@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<style>
    body {
        background-color: #2c3e50;
        color: #ecf0f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-box {
        background-color: #ffffff;
        color: #333;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        transition: transform 0.3s ease;
    }

    .login-box:hover {
        transform: scale(1.02);
    }

    .form-title {
        font-weight: 700;
        color: #2c3e50;
    }

    .btn-primary {
        background-color: #5a67d8;
        border-color: #5a67d8;
    }

    .btn-primary:hover {
        background-color: #434190;
        border-color: #434190;
    }

    .btn-outline-secondary {
        border-color: #5a67d8;
        color: #5a67d8;
    }

    .btn-outline-secondary:hover {
        background-color: #5a67d8;
        color: #fff;
    }

    .form-control:focus {
        border-color: #5a67d8;
        box-shadow: 0 0 0 0.2rem rgba(90, 103, 216, 0.25);
    }
</style>

<div class="container vh-100 d-flex align-items-center justify-content-center">
    <div class="col-md-5 login-box">
        <h2 class="text-center mb-4 form-title">Вход в систему</h2>

        <div id="error-message" class="alert alert-danger d-none"></div>

        <form id="login-form">
            <div class="form-group mb-3">
                <label>Имя пользователя</label>
                <input name="UserName" class="form-control" required />
            </div>
            <div class="form-group mb-4">
                <label>Пароль</label>
                <input name="Password" type="password" class="form-control" required />
            </div>
            <button type="submit" class="btn btn-primary w-100">Войти</button>
            <div class="d-flex justify-content-center">
                <button class="btn btn-secondary mt-3" onclick="window.location.href='/Logbook?guest=true'">Войти как гость</button>
            </div>
        </form>

        <hr class="my-4" />

        <div class="text-center">
            <a href="/Register" class="btn btn-outline-secondary">Регистрация</a>
        </div>
    </div>
</div>

<script>
    document.getElementById("login-form").addEventListener("submit", async function (e) {
        e.preventDefault();

        const form = e.target;
        const data = {
            UserName: form.UserName.value,
            Password: form.Password.value
        };

        try {
            const response = await fetch("https://localhost:7127/api/auth/login", {
                method: "POST",
                headers: {
                    "Content-Type": "application/json"
                },
                body: JSON.stringify(data)
            });

            if (response.ok) {
                const result = await response.json();
                const token = result.accessToken;

                localStorage.setItem("jwtToken", token);

                window.location.href = "/Logbook";
            } else {
                const content = await response.text();
                showError("Ошибка входа: " + content);
            }
        } catch (err) {
            showError("Ошибка: " + err.message);
        }
    });

    function showError(message) {
        const errorBlock = document.getElementById("error-message");
        errorBlock.textContent = message;
        errorBlock.classList.remove("d-none");
    }
</script>
